<div class="row">
    <div class="container-fluid">
        <div class="col-md-4">
            <h5>Prijavljeni saradnici:</h5>
        </div>
        @if (AuthorClosedProjectDisplayModel.CollaboratorDisplayModels == null)
        {
            <div class="col-xl-12">
                <h5>Ovaj projekat nema prijavljenih saradnika!</h5>
            </div>
        }
        else
        {
            @foreach (eduProjectModel.Display.CollaboratorDisplayModel appliedCollaborator in AuthorClosedProjectDisplayModel.CollaboratorDisplayModels)
            {
                <hr style="border-top: 1px solid lightblue" />
                <div class="row">
                    <div class="col-md-4">
                        @appliedCollaborator.FirstName @appliedCollaborator.LastName
                    </div>
                    @*<div class="col-md-4 ml-auto">
                        @facultyMember.Description
                    </div>*@
                </div>
            }
        }
    </div>
</div>

<div class="row">
    @if (AuthorClosedProjectDisplayModel.Tags == null)
    {
        <div class="col-md-4">
            <br /><br /><h5>Ne postoje tagove povezani sa ovim projektom!</h5><br />
        </div>
    }
    else
    {
        <div class="col-md-4">
            <br /><br /><h5>Tagovi:</h5><br />
        </div>
        <div class="form-group mx-sm-3 mb-2 row">
            @foreach (eduProjectModel.Domain.Tag tag in AuthorClosedProjectDisplayModel.Tags)
            {
                <h5><span class="badge badge-primary projectview-tag">#@tag.Name</span></h5>
                @*<h5>@tag.Description</h5>*@
            }
        </div>
    }
</div>