@page "/projects/{ProjectId}"
@inject IModalService Modal

@if (ProjectDisplayModel == null)
{
    <span>Loading...</span>
}
else
{
<div class="container project-view">

    @*Ja bih izbrisao ovaj naslov*@
    <div class="col-md-4">
        <h4>Osnovne informacije o projektu</h4>
    </div>

    <br /><br />

    <div class="row">

        <h3>
            <b>Naziv projekta: </b>
            <small class="text-muted">@ProjectDisplayModel.Title</small>
        </h3>

    </div>

    <br /><br />

          <div class="row">

              <div class="col-md-4">
                  <h5>Opis projekta:</h5>
              </div>

              <div class="col-xl-12">
                  @ProjectDisplayModel.Description
              </div>



              @if (ProjectDisplayModel.ProjectStatus == "Active")
              {
                  <br /><br /><br />
                  <div class="col-xl-12">
                  <div class="d-flex justify-content-center">
                      <div class="col-4">
                          <label>Start date:</label>
                          <input type="date" id="start" @bind-value="@VisitorActiveProjectDisplayModel.StartDate" style="border: none; color: green;" readonly="readonly">
                      </div>
                      <div class="col-4">
                          <label>End date:</label>
                          <input type="date" id="end" @bind-value="@VisitorActiveProjectDisplayModel.EndDate" style="border: none; color: red;" readonly="readonly">
                      </div>
                  </div>
              </div>
              }
              <div class="col-9">
                  <br /><br /><h5>Projekat kreirao: <b>@ProjectDisplayModel.AuthorFullName</b></h5><br /><br />
              </div>

          </div>

    @if (ProjectDisplayModel.ProjectStatus == "Active")
    {
        <VisitorActiveProjectView VisitorActiveProjectDisplayModel="@VisitorActiveProjectDisplayModel" />
    }
    @if(ProjectDisplayModel.ProjectStatus == "Closed")
    {
        <VisitorClosedProjectView VisitorClosedProjectDisplayModel="@VisitorClosedProjectDisplayModel" />
    }

    <div class="row">
        <div class="col-md-4">
            <h5>Status projekta: <b style="color: lawngreen;">@ProjectDisplayModel.ProjectStatus</b></h5>
        </div>
        @if (ProjectDisplayModel.ProjectStatus == "Active")
        {
            <div class="col-md-4 ml-auto projectview-final-btns">
                <button type="submit" class="btn btn-success projectview-final-btn" disabled="@SignUpButton" @onclick="ShowModal">Prijavi se</button>
                <button type="submit" class="btn btn-danger projectview-final-btn" disabled="@SignUpCancel" @onclick="ShowCancelWarning">Poništi prijavu</button>
            </div>
        }
    </div>
     
</div>
}