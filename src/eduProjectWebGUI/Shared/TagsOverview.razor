<div class="component">
    <h5>Tagovi</h5>
    @if (TagNames.Count == 0)
    {
        <p>Tagovi nisu odabrani.</p>
    }
    else
    {
        <div class="tags">
            @foreach (var name in TagNames)
            {
                <div class="tag" @onclick="@(e => { if (Editing)TagNames.Remove(name);  Console.WriteLine($"Dodan tag sad ih je {TagNames.Count()}"); })">
                    @name
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter]
    public bool Editing { get; set; } = false;
    [Parameter]
    public ICollection<string> TagNames { get; set; } = new HashSet<string>();
    [Parameter]
    public ProjectInputModel ProjectInputModel { get; set; } = null;

    protected override async Task OnInitializedAsync()
    {

    }
}
