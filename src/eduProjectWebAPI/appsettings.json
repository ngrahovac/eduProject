{
  "ConnectionStrings": {
    "EduProjectIdentityDB": "server=(localdb)\\MSSQLLocalDB;database=eduproject_identity_db;Trusted_Connection=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "JwtSecurityKey": "RANDOM_KEY_MUST_NOT_BE_SHARED",
  "JwtIssuer": "https://localhost", //in production, this should be the domain where API is running
  "JwtAudience": "https://localhost", //in production, this should be the domain where client app is running
  "JwtExpiryInDays": 1
}
